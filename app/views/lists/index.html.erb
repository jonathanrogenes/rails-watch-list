<%= render 'navbar' %>
<div class="banner"
     style="background-image:
       linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
       url('<%=image_path("cinema.jpg") %>')">
  <div class="container">
    <h1 class='text-white text-center'>CineTrack</h1>
    <p class='text-white text-center'>Your movie lists, anytime</p>
  </div>
</div>

<div class="container">
  <div class='mt-3'> <h3>Your Lists</h3></div>
  <div class="cards mt-3 mb-4">
    <% @lists.each do |list| %>
      <%= render 'card', list: list%>
    <% end %>
  </div>
</div>
